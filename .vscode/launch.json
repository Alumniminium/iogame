{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SERVER",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/server/bin/Debug/net9/server.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "FRONTEND",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/pixiejsClient",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Debug PixiJS Client",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/pixiejsClient",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/src/*"
            }
        },
        {
            "name": "Attach to PixiJS Client",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/pixiejsClient",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/src/*"
            }
        }
    ],
    "compounds": [
        {
            "name": "SERVER + FRONTEND",
            "configurations": [
                "SERVER",
                "FRONTEND"
            ],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "stopAll": true
        },
        {
            "name": "SERVER ONLY",
            "configurations": [
                "SERVER"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "name": "SERVER + FRONTEND + DEBUG",
            "configurations": [
                "SERVER",
                "FRONTEND",
                "Debug PixiJS Client"
            ],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "stopAll": true
        }
    ]
}